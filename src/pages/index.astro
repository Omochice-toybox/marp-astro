---
import { getSlides } from "@/composable/slides";
import "sakura.css/css/sakura.css";

const title = "Marp meets Astro";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body>
    <h1>{title}</h1>
    {
      (await getSlides()).map((slide) => (
        <div>
          <a href={`./${slide.params.id}`}>
            {slide.params.id}: {slide.props.title}
          </a>
        </div>
      ))
    }
  </body>
</html>
